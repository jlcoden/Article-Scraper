<head>
    <title>Mongo Scraper</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.0.0/materia/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Cormorant+SC" rel="stylesheet">
</head>

<style>
    img {
        width: 25%;
        height: auto;
    }

    .navbar-nav {
        float: right;
    }

    .jumbotron {
        background-image: url("https://www.setaswall.com/wp-content/uploads/2017/04/Cadet-Solid-Color-Background-Wallpaper-5120x2880.png");
    }

    .h1Title {
        color: white;

    }

    .pTitle {
        color: white;
    }
</style>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        {{!-- <a class="navbar-brand" href="/">Mongo Scraper</a> --}}
        <img
            src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d7/National_Public_Radio_logo.svg/1200px-National_Public_Radio_logo.svg.png">
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                    <span class="sr-only">(current)</span>
            </ul>
        </div>
    </nav>

    <div class="jumbotron text-center">
        <div class="overlay">
        </div>
        <div class="background-image">
        </div>
        <div class="caption">
            <h1 class="h1Title">SAVED ARTICLES</h1>
            <p class="pTitle">YOUR SAVED ARTICLES</p>
        </div>

    </div>
    <div class="container-fluid article-container">
        <div class="saved-articles">
            {{#if article}}
            {{#each article}}
            {{#if saved}}
            <div class="card mb-3">
                <h5 class="card-header">{{this.title}} <button class="btn btn-primary float-right" id="savenote">Article
                        Notes</button>
                    <button class="btn btn-primary float-right" id="savenote" data-id="{{ this.id }}">Delete
                        From Saved</button></h5>
                <div class="card-body">
                    <p class="card-text">{{this.summary}}</p>
                </div>
            </div>
            {{/if}}
            {{/each}}
            {{else}}
            <h4 class="text-center">Uh Oh. Looks like we don't have any saved articles.</h4>
            {{/if}}
        </div>

        <footer class="footer">
            <div class="container">
                <p>NPR Mongo Scraper</p>
            </div>
        </footer>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
        <!-- <script src="/assets/javascript/index.js"></script> -->
        <script src="/js/app.js"></script>

</body>