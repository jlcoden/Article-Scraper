<head>
    <title>NPR Mongo Scraper</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.0.0/materia/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Cormorant+SC" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="/">NPR Mongo Scraper</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                    <span class="sr-only">(current)</span>
                </li>
                <li class="nav-item">
                    <a class="btn btn-danger scrape-new">SCRAPE NEW ARTICLES!</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-danger clear">CLEAR ARTICLES!</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="jumbotron text-center">
        <div class="overlay">
        </div>
        <div class="background-image">
        </div>
        <div class="caption">
            <h1>SAVED ARTICLES</h1>
            <p>YOUR SAVED ARTICLES</p>
        </div>

    </div>
    <div class="container-fluid article-container">
        <div class="saved-articles">
            {{#if article}}
            {{#each article}}
            {{#if saved}}
            <div class="card mb-3">
                <h5 class="card-header">{{this.title}}</h5>
                <div class="card-body">
                    <p class="card-text">{{this.summary}}</p>
                    <form action="/comment" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <div class="form-group">
                            <label for="comment">Leave a comment</label>
                            <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                        </div>
                        <button class="btn btn-primary float-right">Submit comment</button>
                    </form>
                    <br><br>
                    <h4>Comments left previously</h4>
                    <hr>
                    {{!-- {{#if comments}}
                    {{#each comments}}
                    <br>
                    <p>{{this}}<button class="btn btn-light delete-comment float-right" data-id="{{ ../id }}"
                            data-index="{{@index}}">Delete this comment</button></p>
                    <br>
                    <hr>
                    {{/each}}
                    {{else}}
                    <p>No comments added yet. </p>
                    {{/if}} --}}

                    {{!-- move saved article back to home page --}}
                    <br>
                    <button class="btn btn-primary delete-button float-right" data-id="{{ this.id }}">Delete from
                        saved</button>
                </div>
            </div>
            {{/if}}
            {{/each}}
            {{else}}
            <h4 class="text-center">Uh Oh. Looks like we don't have any saved articles.</h4>
            {{/if}}
        </div>

        <footer class="footer">
            <div class="container">
                <p>NPR Mongo Scraper</p>
            </div>
        </footer>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
        <!-- <script src="/assets/javascript/index.js"></script> -->
        <script src="/js/app.js"></script>

</body>